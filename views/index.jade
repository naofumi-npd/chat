extends layout

block content
  .container
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2
          h4.alert.alert-danger Due to EY compliance, this conversation won't be recorded and monitored.
          #content
          .form-group
            label(for='name') Name:
            input#name.form-control(type='text')
          label(for='field') Text:
          .input-group
            input#field.form-control(type='text')
            span.input-group-btn
              input#send.btn.btn-default(type='submit', value='Send')
