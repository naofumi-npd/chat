extends layout

block content
  .container
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.login-container
          h2.text-center Login
          .form-group
            label(for='email') Email:
            input#email.form-control(type='text')
          .form-group
            label(for='password') Password:
            input#password.form-control(type='password')
          .form-group
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
